<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1E6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/namee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagee"
                android:layout_width="165dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:contentDescription="pic" />

            <ImageView
                android:id="@+id/imagee1"
                android:layout_width="165dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:contentDescription="pic1" />

            <ImageView
                android:id="@+id/imagee2"
                android:layout_width="165dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:contentDescription="pic2" />

            <ImageView
                android:id="@+id/imagee3"
                android:layout_width="165dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:contentDescription="pic3" />

            <ImageView
                android:id="@+id/imagee4"
                android:layout_width="165dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:contentDescription="pic4" />
        </LinearLayout>
    </HorizontalScrollView>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/click_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:textSize="15dp"
        android:lineSpacingMultiplier="1.1"
        app:colorClickableText="#BD7407" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/Divider.Horizontal"
        android:foreground="@android:drawable/menu_full_frame" />
</LinearLayout>