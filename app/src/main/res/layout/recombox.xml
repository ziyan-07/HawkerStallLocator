<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1E6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/namee0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagee0"
                android:layout_width="165dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:contentDescription="pic" />

            <ImageView
                android:id="@+id/imagee10"
                android:layout_width="165dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:contentDescription="pic1" />

            <ImageView
                android:id="@+id/imagee20"
                android:layout_width="165dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:contentDescription="pic2" />

            <ImageView
                android:id="@+id/imagee30"
                android:layout_width="165dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:contentDescription="pic3" />

            <ImageView
                android:id="@+id/imagee40"
                android:layout_width="165dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:contentDescription="pic4" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recommend_me"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:longClickable="true"
            android:rotationX="6"
            android:tooltipText="Recommend this hawker"
            app:backgroundTint="#FBA627"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/btn_star_big_on"
            app:iconTint="#FFFFFF"
            android:onClick="displayToastRecom"/>

        <Button
            android:id="@+id/favourite_me"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:longClickable="true"
            android:rotationX="6"
            android:tooltipText="Add as favourite"
            app:backgroundTint="#FBA627"
            app:cornerRadius="20dp"
            app:icon="@drawable/good"
            app:iconTint="#FFFFFF"
            android:onClick="displayToastFav"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommendse0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favouritese0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/show_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:textSize="15dp"
        android:lineSpacingMultiplier="1.1"
        app:colorClickableText="#BD7407" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/Divider.Horizontal"
        android:foreground="@android:drawable/menu_full_frame" />
</LinearLayout>